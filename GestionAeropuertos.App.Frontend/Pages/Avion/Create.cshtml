@page
@model GestionAeropuertos.App.Frontend.Pages.FormAvionModel
@{
    var avion = Model.Avion;
}
 
<div class="text-center">
<form method="POST">
  
  <label for="marca" class="form-label">Marca:</label>
  <input type="text" class="form-control" id="marca"der="Marca" asp-for="@avion.marca" required>
  <label for="modelo" class="form-label">Modelo:</label>
  <input type="number" class="form-control" id="modelo"lder="Modelo" asp-for="@avion.modelo" required>
  <label for="numero_asientos" class="form-label">Numero de asientos:</label>
  <input type="number" class="form-control" id="numero_asientos"placeholder="Numero de asientos" asp-for="@avion.numero_asientos" required>
