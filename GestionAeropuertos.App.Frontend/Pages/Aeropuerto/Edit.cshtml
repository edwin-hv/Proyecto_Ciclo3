@page
@model GestionAeropuertos.App.Frontend.Pages.EditAeropuertoModel
@{
    var aeropuerto = Model.Aeropuerto;
}
 
<div class="text-center">
<form method="POST">
  <label for="id" class="form-label">Id:</label>
  <input type="number" class="form-control" id="id" name="id" placeholder="Id" asp-for="@aeropuerto.id">
  <label for="nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" asp-for="@aeropuerto.nombre">
  <label for="ciudad" class="form-label">Ciudad:</label>
  <input type="text" class="form-control" id="ciudad" name="ciudad" placeholder="Ciudad" asp-for="@aeropuerto.ciudad">
  <label for="pais" class="form-label">Pais:</label>
  <input type="text" class="form-control" id="pais" name=pais placeholder="Pais" asp-for="@aeropuerto.pais">
  <label for="coordenada_x" class="form-label">Coordenada en X:</label>
  <input type="number" class="form-control" id="coordenada_x" name="coordenada_x" placeholder="Coordenada en X" asp-for="@aeropuerto.coordenada_x">
  <label for="coordenada_y" class="form-label">Coordenada en Y:</label>
  <input type="number" class="form-control" id="coordenada_y" name="coordenada_y" placeholder="Coordenada en Y" asp-for="@aeropuerto.coordenada_y">
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div> 
