@page
@model GestionAeropuertos.App.Frontend.Pages.FormAeropuertoModel
@{
    var aeropuerto = Model.Aeropuerto;
}
 
<div class="text-center">
<form method="POST">
  
  <label for="nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" placeholder="Nombre" asp-for="@aeropuerto.nombre" required>
  <label for="ciudad" class="form-label">Ciudad:</label>
  <input type="text" class="form-control" id="ciudad" placeholder="Ciudad" asp-for="@aeropuerto.ciudad" required>
  <label for="pais" class="form-label">Pais:</label>
  <input type="text" class="form-control" id="pais"placeholder="Pais" asp-for="@aeropuerto.pais" required>
  <label for="coordenada_x" class="form-label">Coordenaa X:</label>
  <input type="number" class="form-control" id="coordenada_x" placeholder="Coordenada X" asp-for="@aeropuerto.coordenada_x" required>
  <label for="coordenada_y" class="form-label">Coordenada Y:</label>
  <input type="number" class="form-control" id="coordenada_y" placeholder="Coordenada Y" asp-for="@aeropuerto.coordenada_y" required>
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div> 
